            <input type="text" id="inputbackground__link">
            <button id="inputbackground__action">ok</button>
        </div>
        <div>
            <h3>Độ mờ: (nhập 0 > 100)</h3>
            <i>Background:</i>
            <input type="text" id="inputbackground__opacity">
            <button id="inputbackgroundopacity__action">ok</button>
        </div>
    </div>
</div>
<script>
    const lissttopcomic=document.querySelectorAll(".topcomicweb")
    const listpage =document.getElementById("list--page")
    for(let i=0;i<7;i++){
        lissttopcomic[i].innerHTML=i+1
    }

    function addpagecontroller(number){
        var listcontroller =""
        if(number>5){
            listcontroller=`<a href="/?page=1" class="page">1</a> 
            <a href="/?page=2" class="page">2</a> 
            <li class="page"  id="another--page">...</li> 
            <a href="/?page=${parseInt(number)}" class="page">${parseInt(number)}</a>
            <a href="/?page=${parseInt(number)+1}" class="page">${parseInt(number)+1}</a>
            `
        }else{
            for(i=1;i<=number+1;i++){
                if(i==3){
                    listcontroller+=`<li class="page" id="another--page">...</li>`
                }else{
                    
                     listcontroller+=`<a id="${i}" class="page" onclick="changepage(this.id)">${i}</a>`
                }
               
            }
        }

        listpage.innerHTML = listcontroller
    }

    {{#if num}}
        console.log({{num}})
        var __numpage = parseInt({{num}}/20)+1
        addpagecontroller({{num}}/20)
    {{/if}}
</script>
{{>script}}
