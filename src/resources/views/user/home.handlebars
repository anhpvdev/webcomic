        <div class="main-container__topcomic" >
            <div>
                <h2>Truyện HOT   </h2>
                <div class="error-message">{{ token }} </div>
                <div class="topcomic__list row no-gutters" id="main__topcomic">
                    {{#each bannercomic}}
                    <div class="topcomic__item col l-2__4 m-2__4 c-4">
                        <div>
                            <div class="topcomic__item__img">
                                <a href="/commic/{{this.id}}">
                                    <img src="/public/image/comic/{{this.image}}" alt="">
                                </a>
                            </div>
                            <div class="topcomic__item__info">
                                <a href="/commic/{{this.id}}">{{this.name}}</a>
