                        </div>
                        <div class="topmember--list">
                            <ul>
                                {{#each topuser}}
                                <li class="member">
                                    <div class="member--number">
                                        <span class="topuserweb"></span>
                                    </div>
                                    <div class="member--avatar">
                                        <img src="/public/image/avatar/{{this.avatar}}" alt="top">
                                    </div>
                                    <div class="member--info">
                                        <div class="member--info__name">
                                            <p>{{this.username}}</p>
                                        </div>
                                        <div class="member--info__leve">
                                            <p>Point: {{this.Point}}</p>
                                        </div>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
